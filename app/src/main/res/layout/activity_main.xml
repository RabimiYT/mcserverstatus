<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- ツールバー -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/toolbarGray"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <!-- サーバー追加ボタン -->
        <ImageButton
            android:id="@+id/addServerButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_add"
            android:contentDescription="Add Server"
            android:tint="@color/textColor" />

        <!-- タイトル -->
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="McServerStatus"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:gravity="center" />

        <!-- ダーク/ライト切替ボタン -->
        <ImageButton
            android:id="@+id/darkModeToggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_sun"
            android:contentDescription="Toggle Dark/Light Mode"
            android:tint="@color/textColor" />
    </LinearLayout>

    <!-- ツールバーと背景の間のセパレーター -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/separatorGray" />

    <!-- サーバー一覧など残りの背景 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <!-- サーバー情報をここに追加 -->
    </LinearLayout>

</LinearLayout>