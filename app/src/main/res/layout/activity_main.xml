<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbarGray">

    <!-- ツールバー -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/toolbarGray"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="McServerStatus"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- サーバー追加ボタン -->
        <ImageButton
            android:id="@+id/addServerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add Server"
            android:src="@drawable/ic_add_server"/>

        <!-- ダークモード切替 -->
        <ImageButton
            android:id="@+id/darkModeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle Dark Mode"
            android:src="@drawable/ic_sun"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- ツールバーと背景の間の白いグレー -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/separatorGray"/>

    <!-- メインコンテンツ -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/serverList"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- サーバー追加はツールバー上なのでここには不要 -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>